<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ts_26"
        android:layout_height="@dimen/ts_44">

        <TextView
            android:id="@+id/about_title_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/cancle_bg_style" />

        <TextView
            android:layout_width="wrap_content"
            android:text="关于UnivStar"
            android:textSize="@dimen/ts_18"
            android:textColor="@color/blue_arlt"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/ts_1" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/ts_52"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="122dp"
            android:src="@mipmap/about_log"
            android:layout_gravity="center_vertical"
            android:layout_height="122dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        style="@style/login_line_style"
        android:layout_marginTop="@dimen/ts_68dp"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/ts_1" />

    <RelativeLayout
        android:id="@+id/about_intro_group"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/ts_12"
        android:layout_height="@dimen/ts_48">


        <TextView
            android:layout_width="wrap_content"
            android:text="UnivStar介绍"
            android:layout_centerVertical="true"
            style="@style/home_myself_list_tv_style"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="@dimen/ts_7"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="@dimen/ts_12" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        style="@style/login_line_style"
        android:layout_marginLeft="@dimen/ts_12"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/ts_1" />

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/ts_12"
        android:layout_height="@dimen/ts_48">


        <TextView
            android:layout_width="wrap_content"
            android:text="新版本检测"
            android:layout_centerVertical="true"
            style="@style/home_myself_list_tv_style"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/ts_12"
                android:textColor="@color/blue_arlt"
                android:layout_centerVertical="true"
                android:text="已是最新版本"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ts_18"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="@dimen/ts_7"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="@dimen/ts_12" />

        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        style="@style/login_line_style"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/ts_1" />

</LinearLayout>