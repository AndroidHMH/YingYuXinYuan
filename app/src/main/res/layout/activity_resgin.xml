<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.jiyun.yingyuxinyuan.ui.activity.ResginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ts_26"
        android:layout_height="@dimen/ts_44">

        <TextView
            android:id="@+id/resgin_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/cancle_bg_style" />

    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:text="输入手机号，快速注册"
                    android:textSize="@dimen/ts_18"
                    android:layout_marginTop="@dimen/ts_42"
                    android:layout_width="match_parent"
                    android:textColor="@color/login_phone_flag_c"
                    android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/ts_56"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/ts_32"
                android:textSize="@dimen/ts_16"
                android:text="+86"
                android:visibility="gone"
                android:textColor="@color/login_phone_flag_c"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="@dimen/ts_1"
                android:background="@color/d8_c"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/ts_10"
                android:layout_height="@dimen/ts_16" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/resgin_phone"
                        android:layout_width="match_parent"
                        style="@style/login_logout_input"
                        android:maxLength="11"
                        android:hint="输入手机号"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/resgin_phone_res"
                        android:layout_width="@dimen/ts_22"
                        android:visibility="invisible"
                        android:src="@mipmap/input_close"
                        android:layout_alignParentRight="true"
                        android:layout_height="@dimen/ts_22" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="@dimen/ts_280"
                style="@style/login_line_style"
                android:layout_marginTop="@dimen/ts_20"
                android:layout_height="@dimen/ts_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ts_30"
                android:background="@color/white"
                >


                <EditText
                    android:id="@+id/resgin_yzm"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/ts_90"
                    android:maxLength="6"
                    style="@style/login_logout_input"
                    android:hint="输入验证码"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/resgin_getyzm"
                    android:layout_width="105dp"
                    android:layout_centerVertical="true"
                    style="@style/register_getcode_style"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="#5491FF"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/register_aty_getcode_reset_clear"
                    android:layout_toLeftOf="@id/resgin_getyzm"
                    android:layout_width="@dimen/ts_22"
                    android:visibility="invisible"
                    android:src="@mipmap/input_close"
                    android:layout_marginRight="@dimen/ts_3"
                    android:layout_height="@dimen/ts_22" />
            </RelativeLayout>
            <TextView
                android:layout_width="@dimen/ts_280"
                style="@style/login_line_style"
                android:layout_marginTop="@dimen/ts_20"
                android:layout_height="@dimen/ts_1" />

            <LinearLayout
                android:id="@+id/resgin_xieyi_linear"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:text="注册表示你同意"
                    android:textColor="#96979E"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/ts_10"
                    android:textSize="@dimen/ts_12"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/ts_10"
                    android:text="UnivStar服务使用协议"
                    android:textColor="#242424"
                    android:textSize="@dimen/ts_12"
                    android:layout_height="wrap_content"  />
            </LinearLayout>

            <Button
                android:id="@+id/resgin_resgin"
                android:layout_width="@dimen/ts_280"
                android:text="注册"
                android:enabled="true"
                android:textSize="@dimen/ts_16"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/ts_68dp"
                android:background="@drawable/login_btn_enable_bg"
                android:layout_height="@dimen/ts_48"/>

            <LinearLayout
                android:layout_marginTop="@dimen/ts_90"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/login_weixin"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="2"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/ts_56"
                    android:layout_height="@dimen/ts_56"
                    android:src="@mipmap/weixin"/>
                <TextView
                    android:layout_width="wrap_content"
                    style="@style/liblogin_tv_style"
                    android:text="微信登录"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_qq"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="2"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/ts_56"
                    android:layout_height="@dimen/ts_56"
                    android:src="@mipmap/qq"/>
                <TextView
                    android:layout_width="wrap_content"
                    style="@style/liblogin_tv_style"
                    android:text="QQ登录"
                    android:layout_height="wrap_content" />

            </LinearLayout>
                <LinearLayout
                    android:id="@+id/login_weibo"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/ts_56"
                        android:layout_height="@dimen/ts_56"
                        android:src="@mipmap/weibo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        style="@style/liblogin_tv_style"
                        android:text="微博登录"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</LinearLayout>
