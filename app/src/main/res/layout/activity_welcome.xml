<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiyun.yingyuxinyuan.ui.activity.WelcomeActivity">

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="34dp"
        android:text="3"
        android:textColor="#000"
        android:textSize="20sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/ts_80"
            android:src="@mipmap/launch_logo"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/launch_string"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/ts_50"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/ts_25"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/launch_copyright"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="星愿艺考"
                android:textColor="@color/gray"
                android:layout_marginLeft="@dimen/ts_5"
                android:textSize="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


</RelativeLayout>
