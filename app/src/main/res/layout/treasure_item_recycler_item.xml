<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ts_12"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/treasure_item_recycler_item_title_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                app:riv_oval="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/treasure_item_recycler_item_student_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学生姓名"
                    android:textColor="#000"
                    android:textSize="@dimen/ts_16" />

                <TextView
                    android:id="@+id/treasure_item_recycler_item_send_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="发布时间" />

                <TextView
                    android:id="@+id/treasure_item_recycler_item_content_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="内容标题"
                    android:textColor="#000"
                    android:textSize="@dimen/ts_18" />

                <TextView
                    android:id="@+id/treasure_item_recycler_item_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:text="内容" />

                <ImageView
                    android:id="@+id/treasure_item_recycler_item_content_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ts_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/ts_16"
                        android:layout_height="@dimen/ts_16"
                        android:src="@mipmap/label_flag" />

                    <TextView
                        android:id="@+id/treasure_item_recycler_item_work_type_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/ts_8"
                        android:textSize="@dimen/ts_13" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_marginRight="@dimen/ts_12"
            android:background="#f6f6f6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ts_36">

            <LinearLayout
                android:id="@+id/treasure_item_recycler_item_reward_group"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="visible">

                <CheckBox
                    android:id="@+id/treasure_item_recycler_item_reward_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/reward_check_bg"
                    android:checked="true"
                    android:paddingLeft="@dimen/ts_8"
                    android:textColor="@drawable/reward_check_tv_bg" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/treasure_item_recycler_item_reply_group"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/treasure_item_recycler_item_reply_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/reply_check_bg"
                    android:checked="false"
                    android:paddingLeft="@dimen/ts_8"
                    android:textColor="@drawable/reply_check_tv_bg" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/treasure_item_recycler_item_praise_group"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/work_recycler_item_praise_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/praise_check_bg"
                    android:checked="false"
                    android:paddingLeft="@dimen/ts_8"
                    android:textColor="@drawable/praise_check_tv_bg" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/treasure_item_recycler_item_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/share_default" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ts_10"
            android:background="#eeeeee"
            android:orientation="vertical" />

    </LinearLayout>
</LinearLayout>
