<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.jiyun.yingyuxinyuan.ui.activity.my.mymessage.activity.MySettingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ts_26"
        android:layout_height="@dimen/ts_44">
        <TextView
            android:id="@+id/setting_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/cancle_bg_style" />
        <TextView
            android:layout_width="wrap_content"
            android:text="我的信息"
            android:textSize="@dimen/ts_18"
            android:textColor="@color/blue_arlt"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/ts_1" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts_20"/>
    <com.jiyun.yingyuxinyuan.view.MyScrollView
        android:scrollbars="none"
        android:background="#F6F6F6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/ts_10"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/touxiang_my"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_height="@dimen/ts_48">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="头像"
                    android:layout_centerVertical="true"
                    style="@style/home_myself_list_tv_style"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/change_image_my"
                        android:layout_width="@dimen/ts_34"
                        android:scaleType="centerCrop"
                        app:riv_oval="true"
                        android:layout_marginRight="@dimen/ts_12"
                        android:layout_height="@dimen/ts_34" />
                    <ImageView
                        android:layout_width="@dimen/ts_7"
                        android:src="@mipmap/home_myself_right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ts_12"
                        android:layout_height="@dimen/ts_12" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                style="@style/login_line_style"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/ts_1" />
            <RelativeLayout
                android:id="@+id/name_my"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_height="@dimen/ts_48">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="昵称"
                    android:layout_centerVertical="true"
                    style="@style/home_myself_list_tv_style"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/change_name_my"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_14"
                        android:textColor="@color/blue_arlt"
                        android:layout_marginRight="@dimen/ts_12"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="@dimen/ts_7"
                        android:src="@mipmap/home_myself_right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ts_12"
                        android:layout_height="@dimen/ts_12" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                style="@style/login_line_style"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/ts_1" />
            <RelativeLayout
                android:id="@+id/sex_my"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_height="@dimen/ts_48">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="性别"
                    android:layout_centerVertical="true"
                    style="@style/home_myself_list_tv_style"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/change_sex_my"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_14"
                        android:textColor="@color/blue_arlt"
                        android:layout_marginRight="@dimen/ts_12"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="@dimen/ts_7"
                        android:src="@mipmap/home_myself_right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ts_12"
                        android:layout_height="@dimen/ts_12" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                style="@style/login_line_style"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/ts_1" />
            <RelativeLayout
                android:id="@+id/address_my"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_height="@dimen/ts_48">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="地区"
                    android:layout_centerVertical="true"
                    style="@style/home_myself_list_tv_style"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/change_address_my"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_14"
                        android:textColor="@color/blue_arlt"
                        android:layout_marginRight="@dimen/ts_12"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="@dimen/ts_7"
                        android:src="@mipmap/home_myself_right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ts_12"
                        android:layout_height="@dimen/ts_12" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                style="@style/login_line_style"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/ts_1" />
            <RelativeLayout
                android:id="@+id/birthday_my"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_height="@dimen/ts_48">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="生日"
                    android:layout_centerVertical="true"
                    style="@style/home_myself_list_tv_style"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/change_birthday_my"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_14"
                        android:textColor="@color/blue_arlt"
                        android:layout_marginRight="@dimen/ts_12"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="@dimen/ts_7"
                        android:src="@mipmap/home_myself_right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ts_12"
                        android:layout_height="@dimen/ts_12" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                style="@style/login_line_style"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/ts_1" />
        </LinearLayout>
    </com.jiyun.yingyuxinyuan.view.MyScrollView>





</LinearLayout>

