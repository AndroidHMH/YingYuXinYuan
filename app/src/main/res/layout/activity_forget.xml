<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiyun.yingyuxinyuan.ui.activity.forget.ForgetActivity">


    <ImageView
        android:id="@+id/resgin_close"
        android:src="@mipmap/register_return"
        android:layout_marginTop="@dimen/ts_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:text="验证手机号，快速找回密码"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jiyun.yingyuxinyuan.view.MyEditText
            android:id="@+id/forget_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jiyun.yingyuxinyuan.view.MyEditText
            android:id="@+id/forget_yzm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入验证码" />

        <Button
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:id="@+id/forget_getyzm"
            android:background="#fff"
            android:text="获取验证码"
            android:textColor="@color/colorblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/forgetnext"
        android:text="下一步"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"/>


</LinearLayout>
