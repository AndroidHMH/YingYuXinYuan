<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiyun.yingyuxinyuan.ui.modular.homeworkcontent.activity.HomeworkContentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/homework_content_close_btn"
            style="@style/cancle_bg_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="作业详情"
            android:textColor="#00f"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/homeworl_content_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/more" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts_1dp"
        android:background="@color/gray" />

    <com.jiyun.yingyuxinyuan.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/homework_content_icon_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    app:riv_oval="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/homework_content_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名字"
                        android:textColor="#000"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/homework_content_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="日期"
                            android:textColor="@color/gray" />

                        <TextView
                            android:id="@+id/homework_content_source_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:text="课堂作业" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/homework_content_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp" />

            <ImageView
                android:id="@+id/homework_content_img"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/ic_camera" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:src="@mipmap/label_flag" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/homework_content_da_shang_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打赏" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/homework_content_da_shang_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:textColor="#66535353" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/rectangle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="热门评论" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/rectangle" />
                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/homework_content_ping_lun_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none" />

                <LinearLayout
                    android:id="@+id/homework_content_error_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/detail_no_comment" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还没有人发言呢" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/homework_load_more_ping_lun_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="查看更多评论" />
        </LinearLayout>
    </com.jiyun.yingyuxinyuan.view.MyScrollView>

    <RelativeLayout
        android:id="@+id/wok_detail_aty_input_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts_50"
        android:background="@color/white">

        <TextView
            android:id="@+id/homework_content_input_btn"
            android:layout_width="@dimen/ts_200"
            android:layout_height="@dimen/ts_32"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ts_12"
            android:background="@drawable/edit_shape"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/ts_20"
            android:text="写评论" />


        <RelativeLayout
            android:id="@+id/homework_content_dianzan_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ts_16"
            android:gravity="center">

            <TextView
                android:id="@+id/homework_content_dianzan_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/work_detail_praise_normal" />

            <TextView
                android:id="@+id/homework_content_dianzan_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-6dp"
                android:layout_toRightOf="@id/homework_content_dianzan_btn"
                android:text="0"
                android:textColor="@color/blue_arlt"
                android:textSize="@dimen/ts_12" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/homework_content_ping_lun_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/ts_20"
            android:layout_toLeftOf="@id/homework_content_dianzan_group"
            android:gravity="center"
            android:paddingTop="@dimen/ts_5">

            <TextView
                android:id="@+id/homework_content_ping_lun_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/work_detail_comment" />

            <TextView
                android:id="@+id/homework_content_ping_lun_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-8dp"
                android:layout_marginTop="-5dp"
                android:layout_toRightOf="@id/homework_content_ping_lun_btn"
                android:text="0"
                android:textColor="@color/blue_arlt"
                android:textSize="@dimen/ts_12" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
